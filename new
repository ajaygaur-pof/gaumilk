    <script>
        // Simple JavaScript for interactive elements
        document.addEventListener('DOMContentLoaded', function() {
            // Add to subscription buttons
            const addButtons = document.querySelectorAll('.btn-add');
            addButtons.forEach(button => {
                button.addEventListener('click', function() {
                    alert('Product added to your subscription!');
                });
            });
            
            // Plan selection buttons
            const planButtons = document.querySelectorAll('.btn-plan');
            planButtons.forEach(button => {
                button.addEventListener('click', function() {
                    alert('Redirecting to subscription setup...');
                });
            });
            
            // Auth buttons
            document.querySelector('.btn-login').addEventListener('click', function() {
                alert('Login dialog would appear here');
            });
            
            document.querySelector('.btn-signup').addEventListener('click', function() {
                alert('Signup form would appear here');
            });
            
            document.querySelector('.btn-hero').addEventListener('click', function() {
                alert('Starting your subscription journey...');
            });
        });
    </script>
